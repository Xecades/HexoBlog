@import "nib"

$max_width_main = 776px
$max_width_logo = 1024px
$max_width_toc = 220px
$max_link_item = 16rem
$avatar_width = 96px
$avatar_height = 96px

$color_main = convert(hexo-config('style.color.main_color')) || #eb5757
$color_title = #50596c
$color_background = #fcfcfc
$color_card = #fff
$color_font = #4c4d4e
$color_codeblock = #eeeeee
$color_categories_block = #f4f4f4
$color_tags_block = #f4f4f4
$color_footer_text = #999
$color_footer_link = #6b6b6b

$radius_main = convert(hexo-config('style.radius.main_radius')) || 5px
$radius_button = 5px

$space_main = convert(hexo-config('style.space.main_space')) || 3.5rem
$space_sm = convert(hexo-config('style.space.sm_space')) || 1.5rem
$space_float = 1rem
$header_height = 60px

$fontsize = 16px
$code_fontsize = 14px
$toc_fontsize = 14px
$lineheight = 1.8

// Xecades 2021 / 1 / 23

@import url('//fonts.loli.net/css2?family=EB+Garamond:ital,wght@0,400;0,700;1,400;1,700&display=swap');
@import url('//fonts.loli.net/css2?family=JetBrains+Mono:ital,wght@0,400;0,700;1,400&display=swap')

$global_font = "EB Garamond", source-han-serif-sc, 'source han serif sc', 'source han serif cn', 'source han serif tc', 'source han serif tw', 'source han serif', songti sc, microsoft yahei, serif
$code_font = "JetBrains Mono", "consolas", sans-serif

$center-quote-left = '/images/quote-l.svg';
$center-quote-right = '/images/quote-r.svg';

$label-default = lighten(spin(#777, 0), 89%);
$label-primary = lighten(spin(#6f42c1, 10), 87%);
$label-info = lighten(spin(#428bca, -10), 86%);
$label-success = lighten(spin(#5cb85c, 10), 85%);
$label-warning = lighten(spin(#f0ad4e, 10), 83%);
$label-danger = lighten(spin(#d9534f, -10), 87%);