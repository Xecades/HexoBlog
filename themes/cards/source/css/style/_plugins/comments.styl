#valine_container
    #veditor
        background-image url(/assets/valine.webp)
        background-size 200px
        background-repeat no-repeat
        background-position right
        background-color transparent
        resize none
        font-family $global_font
        &:focus
            background-position-y calc(100% + 200px)
            transition all 0.2s ease-in-out 0s

    .vcards .vcard
        padding 15px 20px 0 20px
        border-radius 4px
        margin-bottom 15px
        border 1px solid #f0f0f0

    .vcards .vcard .vh .vcard
        border none
        box-shadow none
    
    .vimg
        border none

#twikoo
    .tk-extras
        display none !important

    .tk-input textarea
        padding .7rem 1rem
        min-height 170px !important
        background-size 200px
        background-repeat no-repeat
        background-position right
        background-color transparent
        background-position-x calc(100% - 1rem)
        resize none
        font-family $global_font
        transition background-position-y 0.2s ease-in-out 0s
        border 0
        &:focus
            background-position-y calc(100% + 200px)
    
    .tk-avatar
        border-radius 50%
        margin-right .7rem
    
    .tk-content
        max-height unset
        font-size 16px

    .tk-time
        margin-left .5rem

    .tk-footer
        display none

    .tk-preview-container
        overflow-wrap break-word

    .tk-submit
        .tk-col
            border 1px solid #eee
            border-radius 4px

    .tk-meta-input
        margin 0
        padding .4rem 0
        border-bottom 1px solid #eee

        .el-input
            width calc(100% / 3)
            margin 0
        
        .el-input-group__append, .el-input-group__prepend
            background-color #fff
            border none
            border-radius 0
            padding-right .2rem

        .el-input__inner
            border-radius 0
            border none
            padding-left .2rem
            color #888

    .tk-panel .tk-content
        a:not(.button)
            color #409EFF
        
        code
            color #333

        blockquote
            color white

    pre::-webkit-scrollbar
        width 0 !important
        height 0 !important

    a
        text-decoration none